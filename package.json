{
  "name": "@nodecfdi/sat-estado-cfdi",
  "description": "Consulta el estado de un cfdi en el webservice del SAT",
  "version": "2.1.1",
  "type": "module",
  "main": "",
  "module": "",
  "types": "",
  "files": [
    "dist"
  ],
  "exports": {},
  "imports": {
    "#src/*": "./src/*.js"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "gen:docs": "typedoc --options typedoc.json",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm lint:check && pnpm typecheck",
    "build": "tshy",
    "postbuild": "pnpm run gen:docs && git add docs/*",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@jsprismarine/typedoc-material-theme": "^1.0.4",
    "@nodecfdi/cfdi-core": "^0.6.1",
    "@nodecfdi/cfdi-expresiones": "^3.0.4",
    "@nodecfdi/eslint-config": "^2.1.1",
    "@nodecfdi/prettier-config": "^1.2.0",
    "@nodecfdi/tsconfig": "^1.7.2",
    "@types/chai-xml": "^0.3.6",
    "@types/node": "^22.7.5",
    "@vitest/coverage-istanbul": "^2.1.2",
    "auto-changelog": "^2.5.0",
    "axios": "^1.7.7",
    "chai-xml": "^0.4.1",
    "entities": "^5.0.0",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "is-in-ci": "^1.0.0",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "tshy": "^3.0.2",
    "typedoc": "^0.26.9",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "peerDependencies": {
    "@nodecfdi/cfdi-core": ">=0.6.1",
    "axios": "^1.7.7"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    }
  },
  "author": "Misael Limon <limon.martinez.misael@gmail.com>",
  "contributors": [
    "Fernando Isidro <luffynando@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/sat-estado-cfdi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/sat-estado-cfdi.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/sat-estado-cfdi/issues"
  },
  "keywords": [
    "sat",
    "estado",
    "consulta",
    "cfdi",
    "servicio",
    "validacion",
    "cancelable",
    "efos"
  ],
  "engines": {
    "node": ">=18 <=22"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config",
  "packageManager": "pnpm@9.12.1",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test:run"
  },
  "tshy": {
    "selfLink": false,
    "exports": {
      ".": "./src/index.ts",
      "./types": "./src/types.ts",
      "./clients/fetch": "./src/clients/fetch_consumer_client.ts",
      "./clients/axios": "./src/clients/axios_consumer_client.ts"
    }
  }
}
